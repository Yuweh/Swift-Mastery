
//Programmatic

func viewDidLoad() {
    let square = UIView(frame: CGRect(x: 50, y: 0, width: 100, height: 100))
    square.backgroundColor = UIColor.red
    //self.view.addSubview(square)
    /*
     x = self.view.frame.width/2 - square.width/2
     y = self.view.frame.height/2 - square.height/2
 
 */
}


//Computing for Screen Size

/* 
//With AutoLayout, computation goes like this

X and Y are set (30 and 100)
z is width of the screen
a is height of the screen
width = z-(x+x)
height = a-(y+y)

//With Alignment, Width(a) and Height(b) are set
x= c/2 - b/2
y= d/2 - a/2

*/
